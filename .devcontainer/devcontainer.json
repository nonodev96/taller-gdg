// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Custom pytorch",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	// "image": "taller-gdg-runner_pytorch",
	"build": {
		"dockerfile": "Dockerfile-pytorch",
		// Argumentos con los que se construye la imagen
		"args": {}
	},
	// Argumentos con los que se ejecuta el contenedor
	"runArgs": [
		"--gpus=all",
		"--ipc=host",
		"--ulimit",
		"memlock=-1",
		"--ulimit",
		"stack=67108864"
	],
	"containerEnv": {
		"TALLER_TOKEN": "${localEnv:TALLER_TOKEN}"
	},
	"remoteEnv": {
		"PATH": "${containerEnv:PATH}:/some/other/path"
	},
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "pip3 install --user -r requirements.txt",
	"postCreateCommand": [
		"nvidia-smi"
	],
	// Configure tool-specific properties.
	// "customizations": {},
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.defaultProfile.linux": "zsh",
				"terminal.integrated.profiles.linux": {
					"zsh": {
						"path": "/bin/zsh"
					}
				}
			},
			"extensions": [
				"ms-vscode.makefile-tools",
				"ms-azuretools.vscode-docker",
				"ms-vscode.cpptools-extension-pack",
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-toolsai.jupyter",
				"ms-toolsai.vscode-jupyter-cell-tags",
				"ms-toolsai.jupyter-keymap",
				"ms-toolsai.jupyter-renderers",
				"ms-toolsai.vscode-jupyter-slideshow",
				"ms-toolsai.tensorboard",
				"MS-CEINTL.vscode-language-pack-es"
			]
		}
	},
	"mounts": [
		"source=${env:USERPROFILE}/.ssh,target=/root/.ssh,type=bind,consistency=cached",
		"source=${env:USERPROFILE}/.gitconfig,target=/root/.gitconfig,type=bind,consistency=cached"
	],
	"features": {
		"ghcr.io/nils-geistmann/devcontainers-features/zsh:0": {},
		"ghcr.io/devcontainers-extra/features/zsh-plugins:0": {
			"omzPlugins": "https://github.com/zsh-users/zsh-autosuggestions.git"
		}
	}
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}